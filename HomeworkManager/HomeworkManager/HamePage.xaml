<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeworkManager.HamePage"
             BackgroundColor="{StaticResource BlackishBlueColor}">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Cthulhu ate my homework!"
                HorizontalOptions="CenterAndExpand" />
            <Button x:Name="projectsButton"
                    Text="Projects"
                    Style="{StaticResource HomePageButton}"
                    Clicked="ProjectsButton_Clicked"/>
            <Button x:Name="timerButton"
                    Text="Productivity Timer"
                    Style="{StaticResource HomePageButton}"
                    Clicked="TimerButton_Clicked"/>
            <Button x:Name="assignmentsButton"
                    Text="Assignments"
                    Style="{StaticResource HomePageButton}"
                    Clicked="AssignmentsButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>