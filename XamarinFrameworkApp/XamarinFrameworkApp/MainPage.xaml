<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XamarinFrameworkApp"
             x:Class="XamarinFrameworkApp.MainPage">
    <StackLayout VerticalOptions="Center">
        <!-- Place new controls here -->
        <!--"Label" is the h1, et al tag-->
        <Label x:Name="greetingLabel" 
               Text="Welcome to Xamarin.Forms!" 
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />
        <!--Entry is a text input box-->
        <Entry x:Name="nameEntry" 
               Placeholder="Enter Name"/>
        <!--what it says on the tin-->
        <Button Text="Say hello!"
                Clicked="Button_Clicked"/>
        <!--Names are only for when something needs to be returned, like adding a variable to refernced the returned information-->
    </StackLayout>

</ContentPage>
